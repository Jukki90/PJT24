package com.example.tests;

import org.openqa.selenium.By;

import com.example.fw.ApplicationManager;

public class GroupData {
	public String name;
	public String header;
	public String footer;
	
	public GroupData() {
		
	}

	public GroupData(String nameGroup, String header, String footer) {
		this.name = nameGroup;
		this.header = header;
		this.footer = footer;
	}

	public void fillGroupPage(TestBase testBase, ApplicationManager applicationManager) {
		ApplicationManager.driver.findElement(By.name("group_name")).clear();
	    ApplicationManager.driver.findElement(By.name("group_name")).sendKeys(name);
	    ApplicationManager.driver.findElement(By.name("group_header")).clear();
	    ApplicationManager.driver.findElement(By.name("group_header")).sendKeys(header);
	    ApplicationManager.driver.findElement(By.name("group_footer")).clear();
	    ApplicationManager.driver.findElement(By.name("group_footer")).sendKeys(footer);
	}
}