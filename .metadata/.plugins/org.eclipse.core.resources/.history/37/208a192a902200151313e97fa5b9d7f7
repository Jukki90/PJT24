package com.example.fw;

import org.openqa.selenium.By;
import org.openqa.selenium.support.ui.Select;

import com.example.tests.TestBase;
import com.example.tests.UserData;

public class ContactHelper extends HelperBase{
	public ContactHelper(ApplicationManager manager) {
		super(manager);
		// TODO Auto-generated constructor stub
	}


	public void fillUserAttributes(ApplicationManager manager, TestBase testBase, UserData user) {
		manager.driver.findElement(By.name("firstname")).clear();
	    manager.driver.findElement(By.name("firstname")).sendKeys(user.firstName);
	    manager.driver.findElement(By.name("lastname")).clear();
	    manager.driver.findElement(By.name("lastname")).sendKeys(user.lastName);
	    manager.driver.findElement(By.name("address")).clear();
	    manager.driver.findElement(By.name("address")).sendKeys(user.address);
	    manager.driver.findElement(By.name("home")).clear();
	    manager.driver.findElement(By.name("home")).sendKeys(user.homePhone);
	    manager.driver.findElement(By.name("mobile")).clear();
	    manager.driver.findElement(By.name("mobile")).sendKeys(user.mobilePhone);
	    manager.driver.findElement(By.name("email")).clear();
	    manager.driver.findElement(By.name("email")).sendKeys(user.email);
	    new Select(manager.driver.findElement(By.name("bday"))).selectByVisibleText(user.birthDay);
	    new Select(manager.driver.findElement(By.name("bmonth"))).selectByVisibleText(user.birthMonth);
	    manager.driver.findElement(By.name("byear")).clear();
	    manager.driver.findElement(By.name("byear")).sendKeys(user.birthYear);
	    new Select(manager.driver.findElement(By.name("new_group"))).selectByVisibleText(user.group);
	    manager.driver.findElement(By.name("address2")).clear();
	    manager.driver.findElement(By.name("address2")).sendKeys(user.address2);
	}

	public void addNewUser() {
		manager.driver.findElement(By.linkText("add new")).click();
	}

}
